<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.auiucloud.component.cms.mapper.UserGalleryCollectionMapper">

    <resultMap id="BaseResultMap" type="com.auiucloud.component.cms.domain.UserGalleryCollection">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="uId" column="u_id" jdbcType="BIGINT"/>
        <result property="postId" column="post_id" jdbcType="BIGINT"/>
        <result property="type" column="type" jdbcType="TINYINT"/>
        <result property="status" column="status" jdbcType="TINYINT"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id
        ,u_id,post_id,
        type,status,create_time,
        update_time
    </sql>

    <select id="selectGalleryFavoriteVOListByPostId2Type"
            resultType="com.auiucloud.component.cms.vo.UserGalleryFavoriteVO">
        select uugc.id,
               uugc.u_id,
               u2.avatar,
               u2.nickname,
               uugc.post_id,
               uugc.type,
               uugc.status,
               uugc.create_time,
               uugc.update_time
        from ums_user_gallery_collection uugc
                 left join ums_user u2 on u2.id = uugc.u_id
        where uugc.status = 0
          and u2.is_deleted = 0
          and uugc.post_id = #{postId}
          and uugc.type = #{type}
    </select>

    <select id="selectGalleryFavoriteVOListByPostIds2Type"
            resultType="com.auiucloud.component.cms.vo.UserGalleryFavoriteVO">
        select uugc.id,
        uugc.u_id,
        u2.avatar,
        u2.nickname,
        uugc.post_id,
        uugc.type,
        uugc.status,
        uugc.create_time,
        uugc.update_time
        from ums_user_gallery_collection uugc
        left join ums_user u2 on u2.id = uugc.u_id
        where uugc.status = 0
        and u2.is_deleted = 0
        and uugc.type = #{type}
        and uugc.post_id in
        <foreach collection="postIds" open="(" close=")" separator="," item="item" index="index">
            #{item}
        </foreach>
    </select>
</mapper>
